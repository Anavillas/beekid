<div class="modal" id="atividadeModal">
    <div class="modal-content">
        <!-- Botão de Fechar -->
        <button class="close-btn" onclick="closeModal('atividadeModal')">&times;</button>

        <h2 id="modalAtividadeTitle">Adicionar Atividade</h2>
        <input type="hidden" id="atividadeIdInput">

        <label for="horario">Horário:</label>
        <input type="text" id="horarioInput" placeholder="Ex: 14:00">
        
        <label for="titulo">Título:</label>
        <input type="text" id="tituloInput" placeholder="Título da atividade">
        
        <label for="descricao">Descrição:</label>
        <textarea id="descricaoInput" placeholder="Descrição da atividade"></textarea>
        
        <label for="status">Status:</label>
        <select id="statusInput">
            <option value="pendente">Pendente</option>
            <option value="concluido">Concluído</option>
        </select>
        
        <button id="salvarAtividadeBtn">Salvar</button>
      <button id="cancelarAtividadeBtn" onclick="closeModal('atividadeModal')">Cancelar</button>
    </div>
</div>
