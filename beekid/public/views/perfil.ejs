 <div class="container">


    <div class="grid">
      <!-- PERFIL -->
      <section class="card">
        <div class="card-header">
          <h2>Dados pessoais</h2>
          <span id="tipoTag" class="tag"><i class="fa-solid fa-user-shield"></i> &nbsp;<span id="tipoUserTag">—</span></span>
        </div>
        <div class="card-content">
          <div class="identity" style="margin-bottom:16px">
            <img id="avatar" class="avatar" src="https://via.placeholder.com/88" alt="Foto do usuário">
            <div>
              <div id="nomeDisplay" style="font-size:18px;font-weight:700">—</div>
              <div class="muted" id="emailDisplay">—</div>
            </div>
          </div>

          <div class="row">
            <div>
              <label for="nome">Nome</label>
              <input id="nome" type="text" placeholder="Seu nome">
            </div>
            <div>
              <label for="telefone">Telefone</label>
              <input id="telefone" type="text" placeholder="DDD + número">
            </div>
          </div>

          <div class="row">
            <div>
              <label for="email">E-mail</label>
              <input id="email" type="email" placeholder="email@exemplo.com" readonly>
            </div>
            <div>
              <label for="tipoUser">Tipo de usuário</label>
              <select id="tipoUser" disabled>
                <option value="RESPONSAVEL">Responsável</option>
                <option value="CUIDADOR">Cuidador</option>
              </select>
            </div>
          </div>

          <div class="row">
            <div>
              <label for="cpf">CPF</label>
              <input id="cpf" type="text" placeholder="Somente números" readonly>
            </div>
            <div>
              <label for="senha">Nova senha (opcional)</label>
              <input id="senha" type="password" placeholder="mín. 6 caracteres">
            </div>
          </div>

          <div class="actions">
            <button class="btn ghost" id="btnReset">Descartar</button>
            <button class="btn primary" id="btnSave">Salvar alterações</button>
          </div>
        </div>
      </section>

      <!-- ENDEREÇOS -->
      <section class="card">
        <div class="card-header">
          <h2>Endereços</h2>
          <button id="btnAddEndereco" class="btn primary"><i class="fa-solid fa-plus"></i> &nbsp;Novo</button>
        </div>
        <div class="card-content">
          <div id="listaEnderecos" class="list"></div>
          <div id="vazioEnderecos" class="empty" style="display:none">Nenhum endereço cadastrado.</div>
        </div>
      </section>
    </div>
  </div>

  <!-- MODAL ENDEREÇO -->
  <div id="modalEndereco" class="modal" aria-hidden="true">
    <div class="box">
      <div class="head">
        <h3 id="endModalTitle">Novo endereço</h3>
        <button class="btn ghost" onclick="closeEnderecoModal()">Fechar</button>
      </div>
      <div class="content">
        <div class="row-3 row">
          <div>
            <label for="logradouro">Logradouro</label>
            <input id="logradouro" type="text" placeholder="Rua, Av., Alameda...">
          </div>
          <div>
            <label for="numero">Número</label>
            <input id="numero" type="text">
          </div>
          <div>
            <label for="complemento">Complemento</label>
            <input id="complemento" type="text" placeholder="Apto, bloco...">
          </div>
        </div>

        <div class="row">
          <div>
            <label for="bairro">Bairro</label>
            <input id="bairro" type="text">
          </div>
          <div>
            <label for="cidade">Cidade</label>
            <input id="cidade" type="text">
          </div>
        </div>

        <div class="row">
          <div>
            <label for="estado">UF</label>
            <input id="estado" type="text" maxlength="2" placeholder="SP">
          </div>
          <div>
            <label for="cep">CEP</label>
            <input id="cep" type="text" placeholder="00000-000" maxlength="9">
          </div>
        </div>

        <div class="actions">
          <button class="btn ghost" onclick="closeEnderecoModal()">Cancelar</button>
          <button class="btn primary" id="btnSalvarEndereco">Salvar</button>
        </div>
      </div>
    </div>
  </div>

  <div id="toast" class="toast">Salvo com sucesso</div>


    

  <script src="js/perfil.js"></script>