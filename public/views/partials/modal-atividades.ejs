<!-- Modal: Atividade -->
<div class="modal" id="atividadeModal" aria-hidden="true" role="dialog" aria-labelledby="modalAtividadeTitle">
  <div class="modal-card md" role="document">
    <div class="modal-head">
      <h2 id="modalAtividadeTitle">Adicionar Atividade</h2>
      <button class="modal-close" type="button" aria-label="Fechar" onclick="closeModal('atividadeModal')">&times;</button>
    </div>

    <div class="modal-body">
      <input type="hidden" id="atividadeIdInput">

      <div class="form-row">
        <label for="horarioInput">Horário</label>
        <input type="time" id="horarioInput" step="60">
    </div>


      <div class="form-row">
        <label for="tituloInput">Título</label>
        <input type="text" id="tituloInput" placeholder="Título da atividade">
      </div>

      <div class="form-row">
        <label for="descricaoInput">Descrição</label>
        <textarea id="descricaoInput" placeholder="Descrição da atividade" rows="4"></textarea>
      </div>

      <div class="form-row">
        <label for="statusInput">Status</label>
        <select id="statusInput">
          <option value="PENDENTE">Pendente</option>
          <option value="CONCLUIDO">Concluído</option>
        </select>
      </div>
    </div>

    <div class="modal-foot">
      <button class="btn ghost" id="cancelarAtividadeBtn" type="button" onclick="closeModal('atividadeModal')">Cancelar</button>
      <button class="btn primary" id="salvarAtividadeBtn" type="button">Salvar</button>
    </div>
  </div>
</div>
