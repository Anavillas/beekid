<!-- Modal Info da Criança -->
<div class="modal" id="infoModal" aria-hidden="true" role="dialog" aria-labelledby="infoModalTitle">
  <div class="modal-card md" role="document">
    <div class="modal-head">
      <h2 id="infoModalTitle">Adicionar informação</h2>
      <button class="modal-close" type="button" aria-label="Fechar" onclick="closeModal('infoModal')">&times;</button>
    </div>

    <div class="modal-body">
      <input type="hidden" id="infoIdInput">

      <div class="form-row">
        <label for="tipoInfoSelect">Tipo</label>
        <select id="tipoInfoSelect">
          <option value="alergias">Alergia</option>
          <option value="medicamento">Saúde</option>
          <option value="outros">Outros</option>
        </select>
      </div>

      <div class="form-row">
        <label for="infoDescricaoInput">Descrição</label>
        <textarea id="infoDescricaoInput" placeholder="Descreva aqui…" rows="5"></textarea>
      </div>
    </div>

    <div class="modal-foot">
      <button class="btn ghost" type="button" onclick="closeModal('infoModal')">Cancelar</button>
      <button class="btn primary" type="button" id="salvarInfoBtn">Salvar</button>
    </div>
  </div>
</div>
